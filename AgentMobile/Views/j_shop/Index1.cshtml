<script>

    var pageIndex = 1;
    var state = "";
    var isloading = false;
    var isok = false;
    $(function () {
        loaddata();

        $(document).scroll(function () {
            if ($(document).scrollTop() >= $(document).height() - $(window).height()) {
                if (isok = true) {
                    return false;
                }
                loaddata();
            }
        })
    })

    function loaddata() {
        if (isloading == true) { return false; }
        isloading = true;
        $("#nomore").remove();
        if ($("#loading").length <= 0) {
            $("#orderhtml").append("<p id='loading' style='text-align:center'><img src='/Images/system/waitLoad.gif'/></p>");
        }
        $.post("/j_shop/rank1", { "pageIndex": pageIndex, "pageSize": 10000 }, function (data) {
            $("#loading").remove();
            $("#nomore").remove();
            if (data != "") {
                $("#orderjs").tmpl(data).appendTo("#orderhtml");
                pageIndex++;
            }
            else {
                if ($("#nomore").length <= 0) {
                    $("#orderhtml").append("<p id='nomore' style='text-align:center'>没有更多了哦</p>");
                    isok = true;
                }
            }
            isloading = false;


        })
    }
</script>