    <meta name="format-detection" content="telephone=no" />
    <link href="/css/slc/screen.css" rel="stylesheet" />
    <style type="text/css">
        body {
            background: #356ec6;
        }

        .wrap {
            position: relative;
        }

            .wrap .bg {
                width: 100%;
            }

        .box {
            width: 100%;
            position: absolute;
            top: 60px;
            text-align: center;
        }

        .logo img {
            width: 17%;
            margin-bottom: 10px;
        }

        .hen {
            width: 68%;
            background: green;
            margin: 26px auto;
            text-align: center;
            border-radius: 4px;
            box-shadow: 0 5px 10px rgba(0,0,0,.2);
            overflow: hidden;
        }

            .hen a {
                display: flex;
            }

        .left {
            display: flex;
            width: 30%;
            justify-content: center;
            align-items: center;
            padding: 15px 0;
            background: linear-gradient(to right,#4bacf7,#4f9aff);
        }

            .left img {
                width: 48%;
            }

        .right {
            display: flex;
            width: 70%;
            padding-left: 30px;
            align-items: center;
            font-size: 18px;
            color: #fff;
            background: linear-gradient(to right,#4bacf7,#4f9aff);
        }
    </style>
</head>
<body>

    <div class="wrap">
        <img src="@a" alt="" class="bg" />
        <div class="box">
            <div class="logo">
                <img src="/images/logosy.png" alt="" />
            </div>
            <div class="hen">
                <a href="/anti_fake/query">
                    <div class="left">
                        <img src="/images/icon1.png" alt="" />
                    </div>
                    <div class="right">
