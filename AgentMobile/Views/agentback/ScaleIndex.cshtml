        .accordion .link {
            padding: 15px 15px 15px 6em;
            color: #fac800;
        }

        .layui-m-layercont select {
            -webkit-appearance: none;
            border: 1px solid #ddd;
            border-radius: 5px;
            height: 28px;
            width: 100%;
            background-color: #fff;
        }

        .code {
            position: fixed;
            right: 5%;
            bottom: 10%;
            width: 50px;
            height: 50px;
        }

        .TX {
            padding: 0vh 0;
        }

        #img {
            width: 36%;
            margin: 0 auto 10px;
            display: block;
        }

        .dlhtt dl dd span.white {
            color: #000;
        }
    </style>
    <script type="text/javascript">
        $(function () {
            var t;
            $(".news").hover(function () {
                clearInterval(t);
            }, function () {
                t = setInterval(function () {
                    var ul = $(".list");
                    var liHeight = ul.find("li:last").height();
                    ul.animate({ marginTop: liHeight + "px" }, 1000, function () {
                        ul.find("li:last").prependTo(ul);
                        ul.find("li:first").hide();
                        ul.css({ marginTop: 0 });
                        ul.find("li:first").fadeIn(800);
                    });
                }, 3000);
            }).trigger("mouseleave");
        });
    </script>
</head>
<body>
    <div id="page1" data-role="page">
        <div class="TX">
            <div class="dlhtt" id="dlhtt" style="background: url(/images/bgimage.png); background-size: 100% 100%;">
