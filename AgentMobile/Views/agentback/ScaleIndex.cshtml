    <li>${Title}</li>
</script>
<script>
    $(function () {
        getsysnotify();

        getNoAuditCnt();
    })
    function getsysnotify() {
        $.post("/SYSMNotify/GetTop5", {}, function (data) {
            if (data != "") {
                $("#notifytmp").tmpl(data).appendTo("#sysnotifys");
            }
        })
    }

    function getNoAuditCnt() {
        $.post("/MyAgentsInfo/getNoAuditCnt", {}, function (rtn) {
            if (rtn > 0) {
                $("#noaudit").show();
            }
        })
    }

    function bulding() {
        layer.open({ content: "敬请期待", btn: '我知道了' });
    }
</script>