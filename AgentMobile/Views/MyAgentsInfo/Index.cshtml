                line-height: 24px;
                color: #999;
            }

        #setimg img {
            width: 70px;
        }

        #title {
            font-weight: bold;
            font-size: 16px;
            color: #000;
        }

        .ken {
            width: 10px;
            position: absolute;
            top: 70px;
            right: 20px;
        }

        .khfxRow .mid span {
        }

