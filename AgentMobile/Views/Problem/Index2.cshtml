<script src="~/js/Common/layer.mobile-v2.0/layer_mobile/layer.js"></script>
<script>
    $(function () {

        $("#bd").click(function () {
            var Phone = $("#Phone").val();
            if (Phone == "") {
                layer.open({
                    content: '请输入电话号码！！'
   , btn: '我知道了'
                });
                return;
            }
            window.location.href = "/Problem/Logs?phone=" + Phone;

            layer.open({
                type: 2
   , content: '加载中'
            });
        
        })
    })
</script>

