    <link href="/css/StyleSheet1.css" rel="stylesheet" />
    <meta http-equiv="Content-Type" content="text/html; charset=gb2312" />
    <script type="text/javascript">
        window.onload = function () {
            var oImg = document.getElementById('page');
            oImg.style.width = '100%';
            oImg.style.height = document.documentElement.clientHeight / 1 + 'px';
            //高度为可视区的1/3
        }
    </script>

</head>
<body>

    <div id="page" class="banner">
        <img src="/images/banner.png" width="100%" />
        <p class="hx-p2 hx-padding-top30">请输入您的手机号进行查询</p>
        <p class="hx-p2"><input class="hx-txt" id="Phone" type="text" placeholder="请输入手机号" /></p>  
        <p class="hx-p2 hx-padding-top55"><input class="hx-btn" id="bd" type="button" value="提  交" /></p>
    </div>
</body>
