<script>
    $(function () {

        $("#bd").click(function () {
            var Phone = $("#Phone").val();
            if (Phone == "") {
                layer.open({
                    content: 'Please enter the phone number！！'
   , btn: 'I see'
                });
                return;
            }
            window.location.href = "/Problem/Logs?phone=" + Phone;

            layer.open({
                type: 2
   , content: 'loading'
            });

        })
    })
