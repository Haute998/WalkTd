        $(window).resize(function () {
            var sch = $(window).height();
            wah = (sch - 80)
            $('#top_intro').css('height', wah);

        });
        im = 'http://wizardwiz.co.uk/ww/one.jpg';
        $('.le-background').css('background-image', 'url(' + im + ')');

        $(window).scroll(function (e) {
            var s = $(window).scrollTop(),
              d = $(document).height(),
              c = $(window).height(),
              f = 100,
              a = 40,
