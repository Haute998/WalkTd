<script>
    function tocancel(obj) {
        var orderno = $(obj).attr("data-orderno");

        layer.open({
            content: "您确定要取消订单【" + orderno + "】吗？"
   , btn: ['确定', '不要']
   , yes: function (index) {

       $.post("/Order/orderCancel", { "orderNo": orderno }, function (rtn) {
           if (rtn == "ok") {
               layer.open({ content: '订单【' + orderno + "】取消成功", skin: 'msg', time: 2 });
               window.location.href = window.location.href;
           }
           else {
               layer.open({ content: rtn, btn: '我知道了' });
           }
       })

       layer.close(index);
   }
        });


    }


    function wuliu(obj) {
        var type = $(obj).attr("data-type");
        var postid = $(obj).attr("data-postid");
        window.location.href = "https://m.kuaidi100.com/index_all.html?type=" + type + "&postid=" + postid + "&callbackurl=" + window.location.href;
    }
</script>