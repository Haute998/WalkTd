<script>
    var redirectUrl = "@(ViewData["url"])";
    if (top.location != self.location) {
        parent.location = '/Home/VIPLogin?url=' + redirectUrl;
    }
    redirectUrl = "/Home/Index?url=" + redirectUrl;
    $(function () {
        var recodeuser = getCookie("recodeuser");
        if (recodeuser) {
            $("input[name='UserName']").val(recodeuser);
            $("#recodeuser").attr("checked", "checked");
        }
        if ("@TempData["Msg"]" != "") {
            $("#errormsg").text("@TempData["Msg"]").css("color", "blue");
        }
        $("#valiCode").click(function () {
            $("#valiCode").attr("src", "/Home/ValidCode?" + Math.random())
        });
        $("[name='UserName']").focus();
        $("#login").click(function () {
            if ($("#recodeuser").is(':checked')) {
                setCookie("recodeuser", $("input[name='UserName']").val());
            }
            else {
                delCookie("recodeuser");
            }
            $.post("/Home/VIPLogin", $("form").serialize(), function (rtn) {
                if (rtn == "ok") {
                    window.location.href = redirectUrl;
                }
                else {
                    $("#errormsg").html(rtn).css("color", "red");
                }
            })
        });

        $('body').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $("#login").click();
            }
        });
    })
</script>