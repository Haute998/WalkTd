@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="renderer" content="webkit|ie-comp|ie-stand" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link rel="stylesheet" type="text/css" href="/layout/static/h-ui/css/H-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="/layout/static/h-ui.admin/css/H-ui.admin.css" />
    <link rel="stylesheet" type="text/css" href="/layout/lib/Hui-iconfont/1.0.7/iconfont.css" />
    <link rel="stylesheet" type="text/css" href="/layout/lib/icheck/icheck.css" />
    <link rel="stylesheet" type="text/css" href="/layout/static/h-ui.admin/skin/default/skin.css"
          id="skin" />
    <link rel="stylesheet" type="text/css" href="/layout/static/h-ui.admin/css/style.css" />
    <title>普通红包派发明细</title>
    <style type="text/css">
        .table td {
            text-align: center;
        }
    </style>
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script src="~/js/jquery.tmpl.min.js"></script>
    <script src="~/js/common/Datehelper.js"></script>
    <script src="~/js/My97DatePicker/WdatePicker.js"></script>
</head>
<body>

    <nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 微会员 <span class="c-gray en">&gt;</span> 会员红包明细<a class="btn btn-success radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新"><i class="Hui-iconfont">&#xe68f;</i></a></nav>
    <div class="page-container">
        <form class="text-c" id="condition">
            <div class="text-c">
                流水号：
                <input type="text" name="SerialNumber" id="" placeholder=" 请输入流水号" style="width: 250px"
                       class="input-text" />

                区域： @Html.DropDownList("redArea", WeModels.SelectListHelper.GetSYSIntegralCodeArea_AreaName("", "-请选择-"), new { @class = "input-text", @style = "width: 250px", @size = "1" })

                关键字：
                <input type="text" name="keyword" placeholder="流水号/活动/奖品/防伪码" style="width: 250px"
                       class="input-text" value="" />
                <button onclick="morecondition(this)" class="btn btn-default size-MINI radius" type="button">
                    更多
                </button>
                <label style="padding-left:50px; color:red;font-size:20px">红包总金额：@(ViewData["PMoney0"])</label>
                <br /><br />
                <span style="display:none" class="js-nospan">
                    中奖时间：
                    <input type="text" name="DatB" id="" placeholder=" 请输入时间" style="width: 150px"
                           class="input-text " onfocus="WdatePicker({lang:'zh-cn'})" />
                    至
                    <input type="text" name="DatE" id="" placeholder=" 请输入时间" style="width: 150px"
                           class="input-text " onfocus="WdatePicker({lang:'zh-cn'})" />

                    @*奖品名称：
                        <input type="text" name="PrizeName" id="" placeholder=" 请输入奖品名称" style="width: 250px"
                               class="input-text" />*@
                </span>

                <button name="" id="search" class="btn btn-success" type="button">
                    <i class="Hui-iconfont">&#xe665;</i> 搜索
                </button>
                <button name="" id="Export" onclick="Exports()" class="btn btn-success" type="button">
                    <i class="Hui-iconfont">&#xe644;</i> 导出
                </button>




            </div>
            <div class="mt-20">
                <table class="table table-border table-bordered table-hover table-bg" id="datahtml"></table>
                @Html.Partial("_Paging")
            </div>
        </form>
    </div>
    <script type="text/javascript" src="/layout/lib/layer/2.1/layer.js"></script>

    <script type="text/javascript" src="/layout/static/h-ui.admin/js/H-ui.admin.js"></script>
</body>
</html>

<script src="~/js/common/ArithmeticHelper.js"></script>
<script type="text/x-jquery-tmpl" id="datajs">
    <thead>
        <tr class="text-c">
            <th>
                流水号
            </th>
            <th>
                活动标题
            </th>
            <th>
                中奖时间
            </th>
            @*<th>
                    防伪码
                </th>*@
            <th>
                中奖人ID
            </th>

            <th>
                中奖金额
            </th>

            <th>
                地区
            </th>
        </tr>
    </thead>
    <tbody>
        {{each(i,ck) RtnList}}
        <tr class="text-c">
            <td>
                <a href="javascript:void(0)" style="color:blue" data-title="查看记录详情" title="查看记录详情" _href="/LotteryRecord/RecordDetail?serialNumber=${ck.SerialNumber}" onclick="Hui_admin_tab(this)"> ${ck.SerialNumber}</a>

            </td>
            <td>
                ${ck.ActivityTitle}
            </td>

            <td>
                ${ChangeDateFormat(ck.Dat).Format("yyyy-MM-dd hh:mm:ss")}
            </td>
            @*<td>
                    ${ck.IntegralCode}
                </td>*@
            <td>
                ${ck.UserName}
            </td>

            <td>
                ${ck.redMoney}
            </td>
            <td>
                ${ck.redArea}
            </td>

        </tr>
        {{/each}}
    </tbody>
</script>
<script>

    var dataUrl = "/LotteryRecord/GetRecords";

    function Exports() {
        var loading = layer.load(1, {
            shade: [0.1, '#fff'] //0.1透明度的白色背景
        });
        $("#condition").attr("action", "/LotteryRecord/ExportExcel");
        $("#condition").submit();
        layer.close(loading);
    }
    function morecondition(obj) {
        if ($(".js-nospan").is(':visible')) {
            $(".js-nospan").hide();
            $(obj).text("更多");
        }
        else {
            $(".js-nospan").show();
            $(obj).text("隐藏");
        }
    }
</script>