@{
    Layout = null;
}

<!DOCTYPE html>

<html style="height: 100%">
<head>
    <meta charset="utf-8" />
    <title>窜货预警分布图</title>
    <script src="~/js/jquery-1.10.2.min.js"></script>
</head>
<body style="height: 100%; margin: 0">
    <div id="container" style="height: 100%"></div>
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script src="~/js/Echarts-4.4/echarts.min.js"></script>
    <script src="~/js/Echarts-4.4/extension/dataTool.min.js"></script>
    <script src="~/js/Echarts-4.4/map/js/china.js"></script>
    <script src="~/js/Echarts-4.4/map/js/world.js"></script>
    <script src="~/js/Echarts-4.4/extension/bmap.min.js"></script>
    <script type="text/javascript">
        var dom = document.getElementById("container");
        var myChart = echarts.init(dom);
        var app = {};
        option = null;
        function randomData() {
            debugger;
            return Math.round(Math.random() * 1000);
        }

        $.post("/warning/GetPage", {}, function (data) {

            var adata = data;
            loadmap(adata);
        })

        function loadmap(adata) {

            option = {
                title: {
                    text: '窜货预警分布图',
                    subtext: '窜货预警分布图及各省窜货数量',
                    left: 'center'
                },
                tooltip: {
                    trigger: 'item'
                },
                legend: {
                    orient: 'vertical',
                    left: 'left',
                    data: ['窜货预警']
                },
                visualMap: {
                    min: 0,
                    max: 2500,
                    left: 'left',
                    top: 'bottom',
                    text: ['多', '少'],           // 文本，默认为数值文本
                    calculable: true
                },
                toolbox: {
                    show: true,
                    orient: 'vertical',
                    left: 'right',
                    top: 'center',
                    feature: {
                        //dataView: { readOnly: false },
                        //restore: {},
                        saveAsImage: {}
                    }
                },
                series: [
                    {
                        name: '窜货笔数',
                        type: 'map',
                        mapType: 'china',
                        roam: false,
                        label: {
                            normal: {
                                show: true
                            },
                            emphasis: {
                                show: true
                            }
                        },
                        data: adata
                    }
                ]
            };;
            if (option && typeof option === "object") {
                myChart.setOption(option, true);
            }
        }

        function getcnt(data, cityname) {
            var cnt = 0;
            $(data).each(function (i, o) {
                if (o.province.indexOf(cityname) >= 0) {
                    cnt = o.cnt;
                    return;
                }
            })

            return cnt;
        }

    </script>

</body>
</html>