@using WeModels;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="renderer" content="webkit|ie-comp|ie-stand" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link rel="stylesheet" type="text/css" href="/layout/static/h-ui/css/H-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="/layout/static/h-ui.admin/css/H-ui.admin.css" />
    <link rel="stylesheet" type="text/css" href="/layout/lib/Hui-iconfont/1.0.7/iconfont.css" />
    <link rel="stylesheet" type="text/css" href="/layout/lib/icheck/icheck.css" />
    <link rel="stylesheet" type="text/css" href="/layout/static/h-ui.admin/skin/default/skin.css"
          id="skin" />
    <link rel="stylesheet" type="text/css" href="/layout/static/h-ui.admin/css/style.css" />
    <script src="~/js/jquery-1.10.2.min.js"></script>
    <script src="~/Highcharts/js/exporting.js"></script>
    <script src="~/Highcharts/js/highcharts.js"></script>
    <script src="~/js/YearChart.js"></script>
    <title>一级经销商库存分析</title>
    <style type="text/css">
        .table td {
            text-align: center;
        }

        .sel {
            width: 200px;
            height: 31px;
            line-height: 1.42857;
            padding: 4px;
        }
        #sch {
            margin-bottom: 4px;
        }
    </style>
</head>
<body>
    <div class="page-container">
        <div class="text-c">
            经销商：
            @Html.DropDownList("username",SelectListHelper.GetAuthorityCustomer(), new { @class = "select sel" })
            <button name="" id="sch" class="btn btn-success" type="button" onclick="show()">
                <i class="Hui-iconfont">&#xe665;</i> 搜索
            </button>
        </div>
        <div id="Clientcontainer" style="min-width: 510px; width: 100%; height:500px; margin: 30px auto"></div>
    </div>
</body>
</html>
<script>
    $(function () {
        PieCharts('/AgentCensus/YJCustomerPieCensus', 'Clientcontainer', '', 'pie');
        
    })
    function show() {
        debugger;
        var username = $("#username").find("option:selected").val();

        PieCharts('/AgentCensus/YJCustomerPieCensus?key=' + username, 'Clientcontainer', '', 'pie');
    }
</script>