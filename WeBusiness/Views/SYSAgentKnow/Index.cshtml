@using WeModels
@{
    Layout = null;
}
@model List<SYSAgentKnow>

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="renderer" content="webkit|ie-comp|ie-stand" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link rel="stylesheet" type="text/css" href="/layout/static/h-ui/css/H-ui.min.css" />
    <link rel="stylesheet" type="text/css" href="/layout/static/h-ui.admin/css/H-ui.admin.css" />
    <link rel="stylesheet" type="text/css" href="/layout/lib/Hui-iconfont/1.0.7/iconfont.css" />
    <link rel="stylesheet" type="text/css" href="/layout/lib/icheck/icheck.css" />
    <link rel="stylesheet" type="text/css" href="/layout/static/h-ui.admin/skin/default/skin.css"
          id="skin" />
    <link rel="stylesheet" type="text/css" href="/layout/static/h-ui.admin/css/style.css" />
    <title>微主页代理须知</title>
    <script src="~/js/jquery-1.10.2.min.js"></script>
</head>
<body>
    <nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页<span class="c-gray en">&gt;</span> 微配置 <span class="c-gray en">&gt;</span> 微主页代理须知 <a class="btn btn-success radius r" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新"><i class="Hui-iconfont">&#xe68f;</i></a></nav>
    <div class="page-container">
        <div class="cl pd-5 bg-1 bk-gray mt-20">
            <span class="l">
                <a href="javascript:;" onclick="admin_add('添加微主页图片', '/SYSAgentKnow/AgentKnowIndex', '800', '500')"
                   class="btn btn-primary radius add"><i class="Hui-iconfont">&#xe600;</i>添加</a>


            </span>
        </div>
        <table class="table table-border table-bordered table-bg">
            <thead>
                <tr>
                    <th scope="col" colspan="10">
                        微主页代理列表
                    </th>
                </tr>
                <tr class="text-c">
                    <th>标题</th>
                    <th>
                        排序
                    </th>
                    <th>
                        是否启用
                    </th>
                    <th>
                        操作
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var model in Model.OrderBy(m => m.Sort))
                {
                    <tr class="text-c">
                        <td>
                            @(model.Title)
                        </td>
                        <td>
                            @(model.Sort)
                        </td>
                        <td>
                            @{if (model.IsShow)
                            {  <span class="label label-success radius">启用</span>
                            }
                            else
                            {
                                <span class="label label-default radius">禁用</span>}

                            }
                        </td>
                        <td class="td-manage">

                            <a title="编辑" href="javascript:;"
                               onclick="admin_edit('商城导航图片修改', '/SYSAgentKnow/EditIndex/@(model.ID)', '@(model.ID)', '800', '500')" class="ml-5 edit" style="text-decoration: none">
                                <i class="Hui-iconfont">&#xe6df;</i>
                            </a> <a title="删除" href="javascript:;" onclick="admin_del(this,'@(model.ID)')"
                                    class="ml-5 delete" style="text-decoration: none"><i class="Hui-iconfont">&#xe6e2;</i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script type="text/javascript" src="/layout/lib/jquery/1.9.1/jquery.min.js"></script>
    <script type="text/javascript" src="/layout/lib/layer/2.1/layer.js"></script>
    <script type="text/javascript" src="/layout/lib/laypage/1.2/laypage.js"></script>
    <script type="text/javascript" src="/layout/lib/My97DatePicker/WdatePicker.js"></script>
    <script type="text/javascript" src="/layout/static/h-ui/js/H-ui.js"></script>
    <script type="text/javascript" src="/layout/static/h-ui.admin/js/H-ui.admin.js"></script>
    <script type="text/javascript">
        /*
        参数解释：
        title	标题
        url		请求的url
        id		需要操作的数据id
        w		弹出层宽度（缺省调默认值）
        h		弹出层高度（缺省调默认值）
        */
        /*管理员-增加*/
        function admin_add(title, url, w, h) {
            layer_show(title, url, w, h);
        }
        /*管理员-删除*/
        function admin_del(obj, id) {
            layer.confirm('确认要删除吗？', function (index) {
                //此处请求后台程序，下方是成功后的前台处理……
                $.ajax({
                    url: "/SYSAgentKnow/Del",
                    data: { id: id },
                    type: "post",
                    success: function (data) {
                    }
                });
                $(obj).parents("tr").remove();
                layer.msg('已删除!', { icon: 1, time: 1000 });
            });
        }
        /*管理员-编辑*/
        function admin_edit(title, url, id, w, h) {
            layer_show(title, url, w, h);
        }


    </script>






</body>
</html>
<script>
    function datadel() {
        $.ajax({
            url: "/SYSAdv/ToDels",
            type: "post",
            data: $("input[name='ckids']:checked").serialize(),
            success: function (rtn) {

                if (rtn == "ok") {
                    location.href = parent.location;
                }
                else {
                    layer.alert(rtn);
                }
            }
        });
    }

</script>