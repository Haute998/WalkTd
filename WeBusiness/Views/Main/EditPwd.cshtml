@using WeModels
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>修改密码</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="~/js/layui-v2.4.5/layui/layui.all.js"></script>
    <link href="~/js/layui-v2.4.5/layui/css/layui.css" rel="stylesheet" />
    <script src="~/js/jquery-1.10.2.min.js"></script>
</head>
<body>
    <form class="layui-form" action="" style="margin:15px 20px 5px 20px;">
        <div class="layui-form-item">
            <label class="layui-form-label">旧密码</label>
            <div class="layui-input-block">
                <input type="password" class="layui-input" name="oldpwd" lay-verify="required" placeholder="请输入旧密码" autocomplete="off" required />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">新密码</label>
            <div class="layui-input-block">
                <input type="password" class="layui-input" name="pwd" lay-verify="required" placeholder="请输入新密码" autocomplete="off" required />
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">确认新密码</label>
            <div class="layui-input-block">
                <input type="password" class="layui-input" name="confirmpwd" lay-verify="required" placeholder="请再次输入新密码" autocomplete="off" required />
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button type="button" class="layui-btn" onclick="EditPad()" lay-submit lay-filter="go">确认修改</button>
            </div>
        </div>
    </form>

    <script src="~/js/layui-v2.4.5/layui/layui.js"></script>
    <script type="text/javascript">

        layui.use('form', function () {
            var form = layui.form;
        });

        function EditPad()
        {
            $.post("/Main/toEditPwd", $("form").serialize(), function (rtn) {
                if (rtn == "ok") {
                    layer.alert('修改密码成功,请重新登录.', function (index) {
                        window.location.href = "/Home/LogOff";
                    });
                }
                else {
                    layer.alert(rtn);
                }
            });
        }

    </script>
</body>
</html>
