@using WeModels
@{
    Layout = null;
}
@model SYSIntegralCodeArea
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <title>修改</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="~/js/layui-v1.0.3/layui/lay/dest/layui.all.js"></script>
    <link href="~/js/layui-v1.0.3/layui/css/layui.css" rel="stylesheet" media="all" />
    <script src="~/js/jquery-1.10.2.min.js"></script>
</head>
<body>
    <fieldset class="layui-elem-field layui-field-title">
        <legend>区域添加</legend>
    </fieldset>
    <form class="layui-form" action="">
        @Html.HiddenFor(m => m.ID)
        <div class="layui-form-item">
            <label class="layui-form-label" style="width: 200px; ">区域名称</label>
            <div class="layui-input-inline" style="width:400px">
                @Html.TextBoxFor(m => m.AreaName, new { @class = "layui-input", @lay_verify = "required", @placeholder = "请输入区域名称", @autocomplete = "off", @required = "" })
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label" style="width:200px">红包数量</label>
            <div class="layui-input-inline" style="width:400px">
                @Html.TextBoxFor(m => m.cnt, new { @class = "layui-input", @lay_verify = "required", @placeholder = "请输入红包数量", @autocomplete = "off", @required = "" })
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label" style="width: 200px; "></label>
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit lay-filter="go">保存修改</button>
            </div>
        </div>
    </form>

    <script>
        //Demo
        layui.use('form', function () {
            var form = layui.form();

            //监听提交
            form.on('submit(go)', function (data) {
                $.post("/SYSIntegralCodeArea/ToEdit", $("form").serialize(), function (rtn) {
                    if (rtn == "ok") {
                        parent.window.location.href = parent.window.location.href;
                    }
                    else {
                        layer.alert(rtn);
                    }
                });
                return false;
            });
        });
    </script>
</body>
</html>
